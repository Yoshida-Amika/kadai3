<% if @book.errors.any? %>
  <%= @book. errors.count %>errors prohibited this obj from being saved: %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 pd-sm-0">
<div class="row">
  <div class="col-md-3">
    <%= render 'userinfo', user: @user, book: @book %>
  </div>
<div class="col-md-8 offset-md-1">


<h2>Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><a class="user_path" href="/users/<%= user.id %>">Show</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>

