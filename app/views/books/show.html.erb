<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 pd-sm-0">
<div class="row">
  <div class="col-md-3">
    <!--User infoテンプレート-->
    <%= render 'users/userinfo', user: @user, book: @book %>
  </div>
<div class="col-md-8 offset-md-1">

<!--自分の投稿一覧-->
<h2>Book detail</h2>

<table class="table table-hover table-inverse">

          <tbody>
            <tr>
              <td>
                <a href="/users/<%= @user.id %>">
                <%= image_tag @book.user.get_profile_image(100,100) %>
                <br>
                <%= @user.name %>
                </a>
              </td>
              <td>
                <a href="/books/<%= @book.id %>">
                <%= @book.title %>
                </a>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <a class="btn-sm btn-success edit_book_path" href="/books/<%= @book.id %>/edit">Edit</a>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_path" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
</div>
</div>
</div>







